{
  "version": 2,
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/(.*)\\.(png|jpg|jpeg|gif|svg|webp|ico|css|js|map|txt|woff2?|ttf)$", "dest": "/$1.$2" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}
