{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    // 정적자산은 절대 리라이트하지 않기
    { "src": "/(.*)\\.(png|jpg|jpeg|gif|svg|webp|ico|css|js|map|txt|woff2?|ttf)", "dest": "/$1.$2" },

    // 그 외만 index.html로
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
